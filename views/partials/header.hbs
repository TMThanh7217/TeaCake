            {{#if (isAnonymous userAuthorization)}}
            <ul class='navbar-nav mx-auto w-100 d-flex justify-content-center'>
                <li id='login-btn' class='nav-item p-1 right-item w-75' onclick='document.location.href="/login"'>
                    <a href='/login'>Login</a> <i class='fa fa-user' style='font-size: 40px'></i>
                </li>
