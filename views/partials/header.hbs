            {{else if (isCommon userAuthorization)}}
            <div class='dropdown nav-item acc-drop p-1 w-75'>
                <button type='button' class='btn right-item' data-toggle='dropdown'>
                    Account <i class='fa fa-user ml-3' style='font-size: 40px'></i>
                </button>
                <div class='dropdown-menu head mt-2'
                    style='background: linear-gradient(rgb(217, 230, 233),rgb(168, 236, 216), rgb(211, 231, 122), rgb(236, 222, 19));'>
