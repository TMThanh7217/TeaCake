                                <img src="{{img}}" class="w-50 rounded-circle">
                            </div>
                            <div class="col-lg-8 col-sm-8 col-8">
                                <strong class="text-info">{{author}}</strong>
                                <div>
                                    {{content}}
                                </div>
                                <small class="text-warning">{{createdAt}}</small>
                            </div>
                        </div>
