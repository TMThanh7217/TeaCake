        <form class="mx-2 order-0 d-flex align-items-center justify-content-center search-box" style="width: 30%"
            action="/products/search">
            <input type="text" class="search-field w-75 h-75" name="keyword" placeholder="Search...">
            <a href="#"><button type="submit" class="search-button"><i class="fa fa-search icon"></i></button></a>
        </form>
