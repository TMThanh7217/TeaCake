<div class="container-fluid d-flex flex-column align-items-center mt-3">
    <h1>Your Cart</h1>
    <div class="container d-flex flex-column align-items-center my-3">
        <div id="cart" class="container-fluid mb-2 p-3 bg-container">
            {{#each products}}
            <div class="row item my-2">
                <div class="col-3 item-img">
                    <img src="{{this.src}}" alt="" class="img-fluid img-thumbnail">
                </div>
                <div class="col-5 item-info">
                    <p class="item-info_name">{{this.name}}</p>
                    <p class="item-info_detail">{{this.description}}</p>
                    <p class="item-info_action">
                        <span class="item-info_del">Remove</span>
                        <span class="item-info_buy-later ml-2">Buy later</span></p>
                </div>
                <div class="col-2 item_pricess">
                    <p class="item-pricess_real-price">${{this.price}}</p>
                    <p class="item-pricess_discount-price">
                        <del>${{this.price}}</del>
                        <span>|</span>
                        <span>-x%</span>
                    </p>
                </div>
                <div class="col-2 item_qty input-group">
                    <div class="input-group-prepend">
                        <button class="btn btn-outline-secondary btn-secondary text-white" type="button"><i class="fa fa-plus"></i></button>
                    </div>
                    <input type="number" class="form-control text-center" value="1">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary btn-secondary text-white" type="button"><i class="fa fa-minus"></i></button>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>

        <div class="container-fluid mt-5 p-3 confirm-payment_zone d-flex justify-content-center bg-container">
            <div id="confirm" class="container-fluid row w-100">
                <div class="col-4  confirm-payment_header">
                    <p class="row">Total</p>
                    <p class="row">Discount</p>
                    <p class="row">After discount</p>
                </div>
                <div class="col-4 confirm-payment_data">
                    <p class="row confirm-payment_data-total">$10</p>
                    <p class="row confirm-payment_data-discount">20% max $1.5</p>
                    <p class="row confirm-payment_data-after">$8.5</p>
                </div>
                <div class="col-4 confirm-payment_option d-flex flex-column justify-content-between align-items-end">
                    <div class="row">
                        <div class="dropdown confirm-payment_option-code">
                            <button type="button" class="btn confirm-payment_option-code_btn dropdown-toggle" data-toggle="dropdown">
                                Code 1
                            </button>
                            <div class="dropdown-menu drop-left">
                                <a class="dropdown-item" href="#">Code 1</a>
                                <a class="dropdown-item" href="#">Code 2</a>
                                <a class="dropdown-item" href="#">Code 3</a>
                            </div>
                        </div>
                    </div>
                    <div class="confirm-payment_option-confirm row btn-group">
                        <button class="btn confirm-payment_option-confirm_OK">Confirm</button>
                        <button class="btn confirm-payment_option-confirm_Ccl">Cancel</button>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>